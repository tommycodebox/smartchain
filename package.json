{
  "name": "smartchain",
  "version": "1.0.0",
  "description": "smartchain | viq.app",
  "main": "dist/bundle.js",
  "author": "Tommy CodeBox",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --watchAll",
    "dev": "webpack --watch",
    "dev:peer": "cross-env GENERATE_PEER_PORT='true' node .",
    "start": "webpack"
  },
  "dependencies": {
    "express": "^4.17.1",
    "js-sha3": "^0.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "nodemon-webpack-plugin": "^4.3.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.13.0",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
